#!/bin/bash

# git add, commit and push in one command

msg="New backup $(date +'%Y-%m-%d %H:%M:%S')"

if [ "$#" -eq 1 ]; then
    msg=$1
fi

if [ "$#" -gt 1 ]; then
    echo "Number of parameters must be 0 or 1."
    exit
fi

function start_lazygit() {
    git add -A
    git commit -m "$msg"
    git push origin main
    echo "git push successful"
}

start_lazygit
